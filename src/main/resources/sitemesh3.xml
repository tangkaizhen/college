<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
	<mapping path="/admin/*" decorator="/WEB-INF/jsp/admin/admin_frame.jsp" />

	<!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
	<mapping path="/admin/login.page" exclue="true" />
	<mapping path="/admin/index*" exclue="true" />
	<mapping path="/admin/logout*" exclue="true" />
	<mapping path="/admin/validateImg*" exclue="true" />
	<mapping path="/admin/*.json" exclue="true" />
</sitemesh>